<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/vk_light_color"
                android:centerColor="@color/vk_light_color"
                android:endColor="@color/vk_light_color" />
            <!--#000000-->
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/vk_color"
                    android:centerColor="@color/vk_color"
                    android:endColor="@color/vk_color" />
                <!--#0090FF-->
            </shape>
        </clip>
    </item>
</layer-list>